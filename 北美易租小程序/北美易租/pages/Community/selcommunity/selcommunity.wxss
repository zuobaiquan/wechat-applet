
page{
  height: 100%;
  border-top:1rpx solid #DFDFDF;
}
.city-tabcon .tabcon-item{
  width:50%;
  float: left;
}
.city-tabcon .selcity-tablist{
  margin:0 auto;
  margin-bottom:30rpx;
  font-size: 32rpx;
  width:152rpx;
  height:64rpx;
  line-height: 64rpx;
  text-align: center; 
}
.search-textcon .serach-icon{
  position:absolute;
  left:16rpx;
  top:13rpx;
  width:34rpx;
  height:32rpx;
}

.show-content{
  display: block;
  margin-bottom:50rpx;
}
.hidden-content{
  display: none;
}
.show-tab{
  color:#f47a20;
  border-bottom:6rpx solid #f47a20;
}
.scroll-container,.search-item,.scroll-view{
  width: 100%;
  height: 100%;
}

.list-city{
  margin:20rpx 0;
  height:90rpx;
  width:100%;
}
.list-city .list-cityimg{
  margin-left:38rpx;
  height:90rpx;
  width:90rpx;
  float: left;
}
.list-city .list-cityname{
  float: left;
  margin-left:38rpx;
  line-height:90rpx;
}

.toast_mask {  
  opacity: 0;  
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  


.letterlist .letter:first-child{
  width: 52rpx;
  font-size: 28rpx;
}