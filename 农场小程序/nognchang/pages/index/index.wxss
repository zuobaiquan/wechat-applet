.container{

}
.container .header{
  width: 100%;
  height: 400rpx;
  border:1rpx solid red;
  box-sizing: border-box;
}
.container .marquee_box{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom:1rpx solid red;
  position: relative;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  font-size: 28rpx;
}

.title {
  padding: 10rpx 20rpx;
  margin: 0 0 20rpx 0;
  border-left: 10rpx solid #ccc;
  font-size: 30rpx;
  background: #ececec;
}

.marquee_panel {
  margin: 20rpx 20rpx 20rpx 0;
  border-left: 10rpx solid #ccc;
  font-size: 26rpx;
}

.marquee_panel>view {
  padding: 30rpx;
  background: #ececec;
  border-radius: 0 20rpx 20rpx 0;
}
