{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom", "es5", "es6", "es2015.promise"],
        "sourceMap": false,
        "noImplicitAny": true,     
        "removeComments": true,
        "noEmitOnError": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots" : ["./@types"]
    },
    "files": [
         "app.ts"
    ],
    "include": [       
        "pages/**/*",
        "utils/**/*"
    ],
    "exclude": [
        "node_modules"
    ],

    "compileOnSave": true
}