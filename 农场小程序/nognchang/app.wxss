page{
    background-color:#FAFAFA;
    width: 100%;
    height: auto;
    box-sizing: border-box;
    font-size:28rpx;
    /*主题颜色*/
    color:#4b474c;
}
textarea{
    word-break: break-all;
    word-wrap: break-word;
}
image{
  display: block;
}
action-sheet-item {
  background-color:#FFFFFF;
  position:relative;
  z-index:9999999;
}

/*遮挡层*/
.mask{
  position: fixed;
  background: rgba(0,0,0,0.5);
  left: 0;
  top: 0;
  width: 100%;
  height:100%;
  z-index: 9;
}

.show-tips{
  position: fixed;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  padding:10rpx 30rpx;
  background: rgba(0,0,0,0.7);
  color:#fff;
  display:inline-block;
  border-radius:10rpx;
}
