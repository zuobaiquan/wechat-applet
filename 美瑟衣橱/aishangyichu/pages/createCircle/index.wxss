.container {

}
.container .logoAndName{
    width: 285rpx;
    margin: 35rpx auto 0;
}
.container .logoAndName .default{
    height: 260rpx;
    background-color:#FF8693;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    display:flex;
    align-items: center;
    justify-content: center;
}
.container .logoAndName .default image{
    width: 91rpx;
    height: 91rpx;
    display: block;
}
.container .logoAndName .logo {
    width: 285rpx;
    height: 260rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    overflow: hidden;
    background-size: cover;
    background-origin: content-box;
    background-position: center top;
    background-repeat: no-repeat;
    background-color: #fff;
}
.container .logoAndName .logo image{
    width: 100%;
    height: 100%;
    display: block;
}
.container .logoAndName .name{
    width: 285rpx;
    padding: 50rpx 0;
    display:flex;
    align-items: center;
    background-color: #fff;
    box-sizing: border-box;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}
.container .logoAndName .name .placeholder-class{
    color: #aaa;
    font-size: 16px;
}
.container .logoAndName .name input{
    flex-grow: 1;
    color: #333;
    font-size: 16px;
    text-align: center;
    padding: 0 10rpx;
}

.container .intro{
    width: 670rpx;
    height: 280rpx;
    background-color: #fff;
    margin: 68rpx auto 0;
}
.container .intro .placeholder-class{
    color:#aaa;
    font-size: 16px;
}
.container .intro textarea{
    display:block;
    width: 100%;
    height: 100%;
    word-wrap:break-word;
    word-break: break-all;
    padding: 35rpx 50rpx;
    color:#333;
    font-size: 16px;
    box-sizing: border-box;
    line-height: 1.6;
}

.container .button{
    width: 375rpx;
    margin: 95rpx auto 0;
}
.container .button button{
    display:block;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    background-color: #FF5669;
    font-size: 16px;
    border-radius: 6rpx;
}