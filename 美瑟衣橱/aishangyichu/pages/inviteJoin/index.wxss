.container{
    padding-top:105rpx;
}
.container .content{
    background-color:#fff;
    width: 670rpx;
    margin: 0 auto;
    border-radius: 6rpx;
    position:relative;
    padding-bottom: 75rpx;
}
.container .content .avatar{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1px solid #fff;
    background-size: cover;
    background-repeat: no-repeat;
    background-origin: content-box;
    background-position: center top;
    background-clip: content-box;
    position:absolute;
    top: -60rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    z-index: 10;
}
.container .content .name{
    text-align: center;
    padding: 85rpx 30rpx 0;
    color: #333;
    font-size: 16px;
}
.container .content .description{
    width: 595rpx;
    margin: 70rpx auto 0;
    border: 1px solid #FF8693;
    border-radius: 6rpx;
    position: relative;
}
.container .content .description .title{
    background-color:#fff;
    padding: 0 35rpx;
    font-size: 15px;
    color: #FF5669;
    position: absolute;
    left: 50%;
    top: -7.5px;
    z-index: 5;
    display:inline-block;
    transform:translateX(-50%);
}
.container .content .description .text{
    color:#999;
    font-size: 13px;
    line-height: 1.6;
    padding: 54rpx 32rpx 38rpx;
}
.container .content .code{
    width: 440rpx;
    height: 490rpx;
    margin: 65rpx auto 0;
}
.container .content .code image{
    width: 100%;
    height: 100%;
}
.container .content .hint{
    padding: 45rpx 30rpx 0;
    text-align: center;
    font-size: 14px;
    color:#999;
}

.container .how-invite{
    padding:35px 65rpx 60rpx 45rpx;
    color:#999;
    font-size: 12px;
    line-height: 1.6;
}

.container .button button{
    border-radius: 0;
    color: #fff;
    background-color: #FF5669;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 16px;
}
/*分享给朋友的图样式*/
.share_img_box{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.6);
    z-index: 999;
}
.share_img_box image{
    width:94%;
    margin:0 auto;
    z-index: 1000;
    display:block;
}
